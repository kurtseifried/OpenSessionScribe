# Homebrew Bundle file for OpenSessionScribe dependencies
# Install with: brew bundle

# Media processing
brew "ffmpeg"

# OCR engines
brew "tesseract"
brew "tesseract-lang"  # Additional language packs

# AI/ML models
brew "ollama"

# Background job processing (Phase 2+)
brew "redis"

# Development tools (optional)
brew "git"
brew "python@3.11"

# System utilities
tap "homebrew/services"